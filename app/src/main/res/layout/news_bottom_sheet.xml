<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="9dp">

        <TextView
            android:id="@+id/tv_news_title_btm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:maxLength="300"
            android:padding="6dp"
            android:text="The World Health Crisis?"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/iv_news_image_btm"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="Helpful Description"
            android:elevation="6dp" />

        <TextView
            android:id="@+id/tv_news_description_btm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_semibold"
            android:padding="8dp"
            android:text="Increased "
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_news_content_btm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_light"
            android:paddingHorizontal="9dp"
            android:text="Increased "
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>