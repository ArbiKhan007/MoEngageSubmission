<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:elevation="4dp"
    android:layout_margin="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/article_gradient"
        android:padding="9dp">
        <TextView
            android:id="@+id/tv_news_title"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:maxLength="300"
            android:text="The World Health Crisis?"
            android:padding="6dp"
            android:textSize="19sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_published_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="22nd October 2023"
                android:layout_marginHorizontal="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/dm_sans_regular" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end"
                android:textSize="11sp"
                android:text="Roger Wilhelm"
                android:layout_marginHorizontal="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/dm_sans_regular" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_news_image"
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="4dp"
            android:layout_height="280dp"
            android:elevation="6dp"
            android:contentDescription="Helpful Description" />

        <TextView
            android:id="@+id/tv_news_description"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_semibold"
            android:text="Increased "
            android:textSize="14sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tv_news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/dm_sans_light"
            android:text="Increased "
            android:paddingHorizontal="9dp"
            android:textSize="13sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>